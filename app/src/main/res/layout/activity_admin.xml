<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AdminActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm Sản Phẩm Mới"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/editTextProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên sản phẩm (ví dụ: Cà Phê Trứng)"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextProductPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Giá (ví dụ: 35000)"
        android:inputType="numberDecimal"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextProductDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mô tả ngắn"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextProductImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL Hình ảnh"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonAddProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm vào Menu"
        android:layout_marginBottom="16dp"/>

    <!-- NÚT MỚI ĐỂ ĐI ĐẾN TRANG QUẢN LÝ -->
    <Button
        android:id="@+id/buttonManageProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quản lý Menu (Sửa/Xoá)" />

</LinearLayout>

