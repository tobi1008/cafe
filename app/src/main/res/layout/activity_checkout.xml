<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context=".CheckoutActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thanh toán"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar"
        android:layout_above="@+id/layoutBottomSummary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/tvDeliveryLocationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vị trí giao hàng"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvChangeAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Thay đổi"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardMap"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_below="@id/tvDeliveryLocationTitle"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/map_placeholder"
                        android:scaleType="centerCrop"
                        android:contentDescription="Bản đồ vị trí"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cardMap"
                    android:layout_below="@id/tvDeliveryLocationTitle"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvDeliveryAddressLine1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chưa có địa chỉ"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                    <TextView
                        android:id="@+id/tvDeliveryAddressLine2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vui lòng nhấn 'Thay đổi' để thêm"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình thức thanh toán"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="12dp"/>

            <RelativeLayout
                android:id="@+id/layoutPaymentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/iconCard"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/card_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="Thẻ ngân hàng"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconCard"
                    android:layout_marginStart="16dp"
                    android:text="Thẻ ngân hàng"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
                <CheckBox
                    android:id="@+id/checkboxPaymentCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutPaymentCash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:elevation="2dp"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:id="@+id/iconCash"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cash_placeholder"
                    android:scaleType="centerCrop"
                    android:contentDescription="Tiền mặt"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/iconCash"
                    android:layout_marginStart="16dp"
                    android:text="Tiền mặt"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/>
                <CheckBox
                    android:id="@+id/checkboxPaymentCash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="false"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã giảm giá"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/editTextVoucher"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Nhập mã voucher"
                    android:background="@drawable/rounded_card_background"
                    android:padding="12dp"
                    android:textAllCaps="true"/>
                <Button
                    android:id="@+id/buttonApplyVoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Áp dụng"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layoutBottomSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền sản phẩm:"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvSubtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phí vận chuyển:"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvShippingFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giảm giá:"
                android:textColor="@color/colorDelete"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tvDiscountAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0 đ"
                android:textColor="@color/colorDelete"
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tổng tiền:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>
        </LinearLayout>

        <Button
            android:id="@+id/buttonPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán"
            app:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</RelativeLayout>

