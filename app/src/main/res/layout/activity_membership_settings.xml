<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/admin_background"
    tools:context=".MembershipSettingsActivity">

    <!-- Custom Header with Back Button -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/admin_background">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/colorPrimaryVariant"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:contentDescription="Quay lại"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cài đặt Hạng Thành Viên"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/surface_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cài đặt mốc chi tiêu (VNĐ)"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="24dp"/>
                    
                    <!-- Mốc Hạng Đồng -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Lên hạng ĐỒNG">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBronzeThreshold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mốc Hạng Bạc -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Lên hạng BẠC">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSilverThreshold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mốc Hạng Vàng -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Lên hạng VÀNG">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGoldThreshold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mốc Hạng Platinum -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Lên hạng PLATINUM">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPlatinumThreshold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Mốc Hạng Kim Cương -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="32dp"
                        android:hint="Lên hạng KIM CƯƠNG">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDiamondThreshold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:imeOptions="actionNext"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cấu hình Mã Voucher Tự Động"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="24dp"/>

                    <!-- Voucher Hạng Đồng -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Voucher hạng ĐỒNG">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etBronzeVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:imeOptions="actionNext"
                            android:hint="VD: BRONZEUP"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Voucher Hạng Bạc -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Voucher hạng BẠC">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etSilverVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:imeOptions="actionNext"
                            android:hint="VD: SILVERUP"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Voucher Hạng Vàng -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Voucher hạng VÀNG">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGoldVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:imeOptions="actionNext"
                            android:hint="VD: GOLDUP"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Voucher Hạng Platinum -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="16dp"
                        android:hint="Voucher hạng PLATINUM">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPlatinumVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:imeOptions="actionNext"
                            android:hint="VD: PLATINUMUP"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Voucher Hạng Kim Cương -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="32dp"
                        android:hint="Voucher hạng KIM CƯƠNG">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDiamondVoucher"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapCharacters"
                            android:imeOptions="actionDone"
                            android:hint="VD: DIAMONDUP"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveSettings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lưu Cài Đặt"
                        app:cornerRadius="24dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
