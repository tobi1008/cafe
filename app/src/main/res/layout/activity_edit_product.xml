<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉnh Sửa Sản Phẩm"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Tên sản phẩm -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sản phẩm"
            android:layout_marginBottom="16dp"/>

        <!-- Giá Size -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giá theo Size"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <EditText
                android:id="@+id/editPriceS"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Giá size S"
                android:inputType="numberDecimal"
                android:layout_marginEnd="4dp"/>
            <EditText
                android:id="@+id/editPriceM"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Giá size M"
                android:inputType="numberDecimal"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"/>
            <EditText
                android:id="@+id/editPriceL"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Giá size L"
                android:inputType="numberDecimal"
                android:layout_marginStart="4dp"/>
        </LinearLayout>

        <!-- Mô tả -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả ngắn"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả ngắn"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- URL Hình ảnh -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL Hình ảnh"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editProductImageUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="URL Hình ảnh"
            android:layout_marginBottom="16dp"/>

        <!-- Giảm giá (%) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phần trăm giảm giá"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/editSalePercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phần trăm giảm giá (ví dụ: 10)"
            android:inputType="number"
            android:layout_marginBottom="16dp"/>

        <!-- THAY EditText BẰNG Spinner CHO CATEGORY -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Danh Mục"
            android:textStyle="bold"/>
        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_marginBottom="16dp" />


        <!-- === GIỮ NGUYÊN SPINNER HAPPY HOUR === -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Áp dụng Giờ Vàng (Tùy chọn):"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerHappyHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Nút Lưu -->
        <Button
            android:id="@+id/buttonUpdateProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu Thay Đổi"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>

