<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textViewProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông Tin Tài Khoản"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/textViewEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_below="@id/textViewProfileTitle"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/textViewUserEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewEmailLabel"
        android:text="user@example.com"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"/>

    <!-- NÚT LỊCH SỬ ĐƠN HÀNG VỚI ID CHÍNH XÁC -->
    <Button
        android:id="@+id/buttonOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewUserEmail"
        android:text="Lịch sử Đơn hàng"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonAdminPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonOrderHistory"
        android:text="Bảng điều khiển Admin"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonLogout"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Đăng xuất"/>

</RelativeLayout>

