<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/admin_background"
    tools:context=".ProfileActivity">

    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryVariant"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <!-- Thông tin user -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center_vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/imageViewAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_coffee_logo"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/cardAvatar"
            android:layout_toStartOf="@+id/btnEditProfile"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Admin Tebi"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryVariant"/>
            <TextView
                android:id="@+id/textViewUserEmailPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="admin@quyenlt.com"
                android:textColor="@color/colorSecondary"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Chỉnh sửa -->
        <ImageButton
            android:id="@+id/btnEditProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_edit"
            app:tint="@color/colorPrimary"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:contentDescription="Chỉnh sửa thông tin"/>

    </RelativeLayout>

    <!-- *** THÔNG TIN *** -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/surface_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hạng thành viên -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hạng thành viên"
                android:textColor="@color/colorPrimaryVariant"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvMemberTier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Vàng"
                android:textSize="16sp"
                android:textColor="@color/colorWarning"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"/>

            <ProgressBar
                android:id="@+id/progressMembership"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:tint="@color/colorPrimary"
                android:max="1000000"
                tools:progress="300000"/>

            <TextView
                android:id="@+id/tvMembershipProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/colorSecondary"
                tools:text="Chi tiêu: 300.000đ / 1.000.000đ"
                android:layout_marginBottom="12dp"/>


            <!-- Số điện thoại -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textColor="@color/colorPrimaryVariant"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="0987654321"
                android:textSize="16sp"
                android:textColor="@color/colorSecondary"
                android:layout_marginBottom="12dp"/>

            <!-- Địa chỉ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ giao hàng"
                android:textColor="@color/colorPrimaryVariant"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="123 Đường ABC, Phường X, Quận Y, TP. Z"
                android:textSize="16sp"
                android:textColor="@color/colorSecondary"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <!--  Menu chức năng -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/surface_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sản phẩm yêu thích -->
            <RelativeLayout
                android:id="@+id/layoutFavorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/iconFavorites"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_favorite_border"
                    android:layout_centerVertical="true"
                    app:tint="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sản phẩm yêu thích"
                    android:layout_toEndOf="@id/iconFavorites"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="?android:attr/textColorSecondary"/>
            </RelativeLayout>

            <!-- Lịch sử đơn hàng -->
            <RelativeLayout
                android:id="@+id/layoutOrderHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="?attr/selectableItemBackground">
                <ImageView
                    android:id="@+id/iconOrderHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    android:layout_centerVertical="true"
                    app:tint="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử Đơn hàng"
                    android:layout_toEndOf="@id/iconOrderHistory"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="?android:attr/textColorSecondary"/>
            </RelativeLayout>

            <!-- Bảng điều khiển Admin -->
            <RelativeLayout
                android:id="@+id/layoutAdminPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:background="?attr/selectableItemBackground"
                android:visibility="gone"
                tools:visibility="visible">
                <ImageView
                    android:id="@+id/iconAdminPanel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_admin_panel"
                    android:layout_centerVertical="true"
                    app:tint="@color/colorPrimary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bảng điều khiển Admin"
                    android:layout_toEndOf="@id/iconAdminPanel"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorPrimaryVariant"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="?android:attr/textColorSecondary"/>
            </RelativeLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- code Đăng xuất -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#FFF1F0">

        <RelativeLayout
            android:id="@+id/layoutLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/iconLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_logout"
                android:layout_centerVertical="true"
                app:tint="@color/colorDelete"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:layout_toEndOf="@id/iconLogout"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textColor="@color/colorDelete"
                android:textStyle="bold"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
