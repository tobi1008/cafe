<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên Danh Mục"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/etCategoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Cà Phê"
        android:inputType="textCapWords"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thứ Tự Ưu Tiên (Sắp xếp)"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/etCategoryPriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: 1, 2, 3... (Số nhỏ hiện trước)"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>


    <!-- CHỌN GIỜ VÀNG -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Áp dụng Khung Giờ Vàng (Tùy chọn)"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/spinnerHappyHour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="24dp"/>


    <Button
        android:id="@+id/btnSaveCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu Danh Mục"/>

</LinearLayout>
