<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ProductDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/imageViewDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Hình ảnh sản phẩm"/>

                <ImageView
                    android:id="@+id/imageViewFavorite"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_favorite_border"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:contentDescription="Nút yêu thích"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textViewDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                tools:text="Tên Sản Phẩm Dài Dài Dài"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                tools:text="Mô tả sản phẩm rất dài và chi tiết ở đây..."
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Size"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:singleSelection="true">
                <!-- Chips sẽ được thêm bằng code -->
            </com.google.android.material.chip.ChipGroup>

            <!-- LỰA CHỌN ĐÁ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Đá"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RadioGroup
                android:id="@+id/radioGroupIce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">
                <RadioButton
                    android:id="@+id/radioIceTogether"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đá chung"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/radioIceSeparate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Đá riêng"/>
            </RadioGroup>

            <!-- LỰA CHỌN ĐƯỜNG -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Mức đường"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupSugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:singleSelection="true">
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSugar100" style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="100%" android:checked="true"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSugar70" style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="70%"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSugar50" style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="50%"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSugar30" style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="30%"/>
            </com.google.android.material.chip.ChipGroup>

            <!-- GHI CHÚ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Ghi chú thêm"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editTextNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:hint="Ví dụ: Ít ngọt, nhiều đá..."
                android:inputType="textMultiLine"
                android:minLines="2"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"/>


            <!-- LỰA CHỌN THÊM (TOPPING) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Lựa chọn thêm"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/checkboxExtraCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Thêm 1 gói cà phê (+10.000 đ)"/>

            <CheckBox
                android:id="@+id/checkboxExtraSugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Thêm 1 gói đường (+2.000 đ)"/>


            <!-- CHỌN SỐ LƯỢNG -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonDecreaseQuantity"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/textViewQuantityDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="1"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonIncreaseQuantity"
                    style="@style/Widget.Material3.Button.IconButton.Filled"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="+" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"/>

            <!-- KHU VỰC ĐÁNH GIÁ -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textViewReviewsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đánh giá sản phẩm"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <RatingBar
                    android:id="@+id/ratingBarAverage"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewReviewsTitle"
                    android:layout_marginTop="8dp"
                    android:isIndicator="true"
                    android:numStars="5" />

                <TextView
                    android:id="@+id/textViewReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/ratingBarAverage"
                    android:layout_alignTop="@id/ratingBarAverage"
                    android:layout_alignBottom="@id/ratingBarAverage"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:text="(0 đánh giá)"/>

                <TextView
                    android:id="@+id/textViewViewAllReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ratingBarAverage"
                    android:layout_marginTop="8dp"
                    android:text="Xem tất cả đánh giá >"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:background="?attr/selectableItemBackground"
                    android:padding="4dp"/>

                <Button
                    android:id="@+id/buttonWriteReview"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Viết đánh giá"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Price"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewDetailPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPriceLabel"
            android:layout_alignParentStart="true"
            android:text="0 đ"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonAddToCartDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Thêm vào giỏ hàng" />

    </RelativeLayout>

</RelativeLayout>

